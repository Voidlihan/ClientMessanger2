<Window x:Class="messanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:messanger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792">
            <TextBox x:Name="textBoxUsername" HorizontalAlignment="Left" Height="81" Margin="1,0,0,0" Grid.Row="1" Grid.RowSpan="2" TextWrapping="Wrap" Text="Имя" Width="157" FontSize="20"/>
            <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Height="81" Margin="1,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Сообщение" Width="157" FontSize="20"/>
            <Button Content="Отправить" Height="50" Width="156" Margin="-630 0 0 0" FontSize="20" FontWeight="Bold" Background="Black" Foreground="White" Click="SendButton"/>
            <TextBlock x:Name="textBlockMessage" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Width="614" Height="413" Margin="150 -210 0 0"/>
        </StackPanel>
    </Grid>
</Window>
